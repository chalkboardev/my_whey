{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{% comment %} <div class="page-width page-width--narrow section-{{ section.id }}-padding"> {% endcomment %}
{% comment %} URL:{{ section.settings.header_image | image_url  }}  {% endcomment %}


<div style="{%- if section.settings.header_image != blank -%} background-size:cover !important; background: url('{{ section.settings.header_image | image_url }}') no-repeat 100% {{ section.settings.background_height_position }}%/100%;   {% endif %}" class=" collection-hero--with-image  collection-hero  color-scheme-1 gradient">
  <div class="collection-hero__inner page-width  scroll-trigger animate--fade-in">
    <div class="collection-hero__text-wrapper">
      <h1 style="background-color: #fff;" class="mw_header_img_txt collection-hero__title">
        <span class="visually-hidden">Collection:
        </span>
        {{ page.title | escape }}</h1>
      <div class="collection-hero__description rte"></div>
    </div>
  </div>
</div>

<div class="page-width section-{{ section.id }}-padding">
  {% comment %} <h1 class="mw_search_head main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
                                                        {{ page.title | escape }}
                            </h1> {% endcomment %}
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "Header Background"
      },
      {
        "type": "image_picker",
        "id": "header_image",
        "label": "Main Header Image"
      },
      {
        "type": "range",
        "id": "background_height_position",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Background Height Position",
        "default": 80
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}