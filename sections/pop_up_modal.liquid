{% schema %}
  {
    "name": "Pop-up Modal",
    "settings": [
      {
      "type": "image_picker",
      "id": "modal_image",
      "label": "Modal Image"
      },
      {
        "type": "range",
        "id": "background_img_position",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Background Image Position",
        "default": 80
      },
      {
        "id": "trigger",
        "type": "text",
        "label": "Pop-Up Modal ID",
        "info": "Unique ID for pop-up trigger"
      },
      {
        "id": "modal_title",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "modal_content",
        "type": "richtext",
        "label": "Content"
      }
    ],
    "presets": [{
      "name": "Pop-up Modal",
      "category": "Window"
    }]
  }
{% endschema %}

{% stylesheet %}
  .modal_window {
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: center;
    align-items: center;
    transition: all ease 0.5s;
  }
  .popup__overlay {
    position: fixed;
    backdrop-filter: blur(4px);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgb(0, 0, 0, 0.5);
    transition: opacity 500ms ease-in-out;
    visibility: hidden;
    opacity: 0;
    transition: all ease 0.5s;
  }

  .popup__overlay:target {
    visibility: visible;
    opacity: 1;
    z-index: 99;
    transition: all ease 0.5s;
  }

  .popup__overlay_edit_show {
    visibility: visible !important;
    opacity: 1 !important;
    z-index: 999 !important;
    transition: all ease 0.5s !important;
  }

  .popup__image {
    width: 100%;
    height:300px;
    position: relative;
    transition: all ease 0.5s;
    text-align: center;
  }

  .modal__content_div {
    padding: 0rem 1rem 4rem 1rem;
  }

  .popup__box {
    overflow: hidden;
    border: 2px solid #ffffff;
    background: #fff;
    border-radius: 8px;
    width: 40%;
    position: relative;
    transition: all ease 0.5s;
    text-align: center;
  }

  .popup__box h2 {
    color: #333;
    font-size: 2em;
    font-weight: bold;
    /* font-family: Verdana, sans-serif; */
    margin-top: 2rem;
    margin-bottom: 0rem;
    padding-bottom: 0;
  }

  .popup__close {
    position: absolute;
    z-index: 9;
    top: 15px;
    right: 27px;
    transition: all 200ms ease-out;
    color: #ffffffba;
    font-size: 30px;
    font-weight: 300;
    line-height: 1.25;
    text-decoration: none;
    cursor: pointer;
  }

  .popup__close:hover {
    color: #c1c1c1;
  }

  .popup__content {
    max-height: 30%;
    overflow: auto;
  }

  @media screen and (max-width: 1280px) {
    .popup__box {
      width: 60%;
    }
  }

  @media screen and (max-width: 720px) {
    .modal__content_div {
      padding: 0rem 2rem 4rem 2rem;
    }
    .popup__overlay {
      position: fixed;
      backdrop-filter: blur(4px);
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background: rgb(0, 0, 0, 0.8);
      transition: opacity 500ms ease-in-out;
      visibility: hidden;
      opacity: 0;
      transition: all ease 0.5s;
    }
    .popup__box {
      width: 90%;
    }
  }

@media screen and (min-width: 1600px) {
  .popup__box {
    width: 30%;
  }
}
