{% comment %} <a id="click_{{ section.settings.trigger }}" href="#{{ section.settings.trigger }}" class="">Open Popup</a> {% endcomment %}

<span
  style="display:none;"
  id="click_{{ section.settings.formula_modal_toast_trigger }}"
  href="#{{ section.settings.formula_modal_toast_trigger }}"
  class="">Open Toast</span>


<div id="{{ section.settings.formula_modal_toast_trigger }}" class="toast__overlay">
  {% comment %} <div class="modal_window"></div> {% endcomment %}
  <div style="background:{{ section.settings.formula_modal_bg_color }}" class="toast__box">

    <span class="toast__close" id="toast__close">&times;</span>

    <p class="heading">{{ section.settings.formula_modal_toast_modal_title }}</p>

    <div class="toast__content_div">

      <div class="toast__content">
        {{ section.settings.formula_modal_toast_modal_content }}
      </div>

    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Submit Formula Modal",
    "settings": [
      {
        "type": "color",
        "id": "formula_modal_bg_color",
        "label": "Background Color",
        "default": "#fff"
      }, {
        "id": "formula_modal_toast_trigger",
        "type": "text",
        "label": "Modal ID",
        "info": "Unique ID for pop-up trigger"
      }, {
        "id": "formula_modal_toast_modal_title",
        "type": "text",
        "label": "Title"
      }, {
        "id": "formula_modal_toast_modal_content",
        "type": "richtext",
        "label": "Content"
      }
    ],
    "presets": [
      {
        "name": "Submit Formula Modal",
        "category": "Window"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .modal_window {
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: center;
    align-items: center;
    transition: all ease 0.5s;
  }
  #cancellation_policy.toast__overlay {
    align-items: center;
  }
  #submit_formula.toast__overlay {
    align-items: center;
  }
  .toast__overlay {
    height: 100vh;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
    align-items: end;
    background: rgb(0, 0, 0, 0);
    transition: opacity 500ms ease-in-out;
    visibility: hidden;
    opacity: 0;
    transition: all ease 0.5s;
  }

  .toast__overlay:target {
    visibility: visible;
    opacity: 1;
    z-index: 99;
    transition: all ease 0.5s;
  }

  .toast_overlay_edit_show {
    visibility: visible !important;
    opacity: 1 !important;
    z-index: 999 !important;
    transition: all ease 0.5s !important;
  }

  .popup__image {
    width: 100%;
    height: 300px;
    position: relative;
    transition: all ease 0.5s;
    text-align: center;
  }

  .toast__content_div {
    padding: 0 1.5rem;
  }

  #cancellation_policy .toast__box {
    overflow: hidden;
    border: 1px solid #ffffff;
    background: #fff;
    border-radius: 8px;
    width: 50%;
    height: auto;
    position: relative;
    transition: all ease 0.5s;
    text-align: center;
  }
  #submit_formula .toast__box {
    overflow: hidden;
    border: 1px solid #ffffff;
    background: #fff;
    border-radius: 8px;
    width: 50%;
    height: auto;
    position: relative;
    transition: all ease 0.5s;
    text-align: center;
  }

  .toast__box .heading {
    height: 40px;
    display: flex;
    align-items: center;
    color: #ffffff;
    text-shadow: 0 0 3px #111;
    text-align: left;
    background: linear-gradient(180deg, rgba(254, 89, 0, 1) 0%, rgba(204, 71, 0, 1) 50%, rgba(156, 54, 0, 1) 100%) !important;
    padding: 0 0 0 12px;
    font-size: 1.1em;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 0;
  }

  .toast__close {
    position: absolute;
    z-index: 9;
    top: 6px;
    right: 8px;
    transition: all 200ms ease-out;
    color: #ffffff;
    font-size: 24px;
    height: 26px;
    border-radius: 50%;
    width: 26px;
    background: #3333337d;
    font-weight: 300;
    line-height: 25px;
    text-decoration: none;
    cursor: pointer;
  }

  .toast__close:hover {
    color: #c1c1c1;
  }

  .toast__content {
    max-height: 30%;
    overflow: auto;
    text-align: left;
  }

  .toast__content p {
    margin: 12px auto;
  }

  .toast__content .svg-wrapper {
    animation-name: fadeIn;
    animation-duration: 1.5s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 20px;
    height: 20px;
    position: relative;
    top: 5px;
    margin-right: 4px;
  }

  .toast__box {
    overflow: hidden;
    border: 1px solid #ffffff;
    background: #fff;
    border-radius: 8px;
    width: 70%;
    height: auto;
    position: relative;
    transition: all ease 0.5s;
    text-align: center;
  }

  @media screen and (max-width: 479px) {
    #cancellation_policy.toast__overlay {
      align-items: flex-start !important;
      padding-top: 20px;
      overflow-y: auto;
    }
    #cancellation_policy .toast__box {
      width: 90% !important;
    }
    #submit_formula.toast__overlay {
      align-items: flex-start !important;
      padding-top: 20px;
      overflow-y: auto;
    }
    #submit_formula .toast__box {
      width: 90% !important;
    }
  }

  @media screen and (max-width: 989px) {
    #cancellation_policy .toast__box {
      width: 80%;
    }
    #submit_formula .toast__box {
      width: 80%;
    }
  }

  @media screen and (max-width: 720px) {
    .toast__content_div {
      padding: 0 10px;
    }
    .toast__content p {
      margin: 8px auto 11px;
    }
    .toast__overlay {
      position: fixed;
      top: 0;
      padding-bottom: 2rem;
      bottom: 0;
      left: 0;
      height: 100%;
      right: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background: rgb(0, 0, 0, 0);
      transition: opacity 500ms ease-in-out;
      visibility: hidden;
      opacity: 0;
      transition: all ease 0.5s;
    }
    .toast__box {
      width: 90%;
    }
  }

  @media screen and (min-width: 1280px) {
    .toast__box {
      width: 60%;
    }
  }

  @media screen and (min-width: 1600px) {
    .toast__box {
      width: 30%;
    }
  }
{% endstylesheet %}

