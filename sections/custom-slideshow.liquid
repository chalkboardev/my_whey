
{{ 'section-video-banner_custom.css' | asset_url | stylesheet_tag }}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

{%- if section.blocks.size > 0 -%}


     <!-- Slider main container -->
<div class="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">


  {%- for block in section.blocks -%}
       <!-- Slides -->
       <div class="swiper-slide" data-swiper-autoplay="7500">
  {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
   
  {% if block.type == 'video' %}
   
  <div class="videoBox" style="{%- if block.settings.video_link == blank -%}background-image: url('{{ block.settings.video_image  | img_url: 'master' }}');{%- endif -%}">
   
  {%- if block.settings.video_link != blank -%}
   
  <div class="fullscreen-video-wrap">
   
  <video class="video-js" loop autoplay preload="none" muted playsinline
   
  poster="https:{{ block.settings.video_image | img_url: 'master' }}">
   
  <source src="{{ block.settings.video_link }}" type="video/mp4">
   
  </video>

 

  <!-- --------------------------------------------- START INFO DIV --------------------------------------------- -->
  <div class="videoBoxInfo_padding videoBoxInfo {{ block.settings.desktop_content_position }} ">
  {% comment %} <div class="videoBoxInfo"> {% endcomment %}
   
  {% if block.settings.title != blank %}
    
  <h1 class="videoBoxInfoTitle " style="color: {{ block.settings.color_text }}">
   
  {{ block.settings.title | escape }}
   
  </h1>
   
  {% endif %}
   
   
   
  {%- style -%}
   
  .videoBackground .imageBoxInfoDescription p {
   
  color: {{ block.settings.color_text }}!important;
   
  }
   
  {%- endstyle -%}
   
   
   
  {% if block.settings.text != blank %}
   
  <div class="imageBoxInfoDescription {{ block.settings.desktop_txt_head_position }}" id="{{ block.id }}" style="color: {{ block.settings.color_text }}">
   
  {{ block.settings.text }}
   
  </div>
   
  {% endif %}
   
   
  {% if block.settings.button_link != blank and block.settings.button_label != blank %}
   
  <a href="{{ block.settings.button_link }}" class="videoBoxInfoBtn" style="color: {{ block.settings.color_btn_text }}; background: {{ block.settings.color_btn_bg }}">
   
  {{ block.settings.button_label | escape }}
   
  </a>
   
  {% endif %}
   
  </div>
   
  </div>
  <!-- --------------------------------------------- END INFO DIV --------------------------------------------- -->
 
   
  </div>
   
  {% endif %}
   
   
   

   
  {% else %}
   
  <div class="imageBox" style="background-color: {{ block.settings.color_bg }}; {%- if block.settings.image_bg != blank -%}background-image: url('{{ block.settings.image_bg | img_url: 'master' }}');{%- endif -%}">
   
   
  <div class="page-width imageBoxInfo {{ block.settings.desktop_content_position }} ">
   
  {% if block.settings.title != blank %}

  <h2 class="h1 imageBoxInfoTitle" style="color: {{ block.settings.color_text }}">
   <strong>
    {{ block.settings.title | escape }}
   </strong>
  </h2>
   
  {% endif %}
   
   
   
  {%- style -%}
   
  .videoBackground .imageBoxInfoDescription p {
   
  color: {{ block.settings.color_text }}!important;
   
  }
   
  {%- endstyle -%}
   
   
   
  {% if block.settings.text != blank %}
   
  <div class="imageBoxInfoDescription" id="{{ block.id }}" style="color: {{ block.settings.color_text }}">
   
  {{ block.settings.text }}
   
  </div>
   
  {% endif %}
   
   
   
  {% if block.settings.button_link != blank and block.settings.button_label != blank %}
   
  <a href="{{ block.settings.button_link }}" class="imageBoxInfoBtn" style="color: {{ block.settings.color_btn_text }}; background: {{ block.settings.color_btn_bg }}">
   
  {{ block.settings.button_label | escape }}
   
  </a>
   
  {% endif %}
   
  </div>
   
  </div>
   
  {% endif %}
  </div>
  {%- endfor -%}
   
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons --> 
  <div class="swiper-button-prev"> </div>
  <div class="swiper-button-next"> </div>

  <!-- If we need scrollbar -->
  {% comment %} <div class="swiper-scrollbar"></div> {% endcomment %}
</div>
 
   
   
  {% else %}
   
  <div class="placeholderNoblocks">
   
  This section doesnâ€™t currently include any content. Add content to this section using the sidebar.
   
      </div>
   
  {%- endif -%}
   


<script>
document.addEventListener('DOMContentLoaded',  function() {
      const swiper = new Swiper('.swiper', {
      // Optional parameters
        // speed: 400,
        // autoplay: {
        //   delay: 9500,
        //   disableOnInteraction: false,
        // },
        // slidesPerView: 1,
        // spaceBetween: 0,
        // slidesOffsetAfter:0,
        // freeMode: true,
        // centeredSlides: true,
        autoplay: true,
        delay: 9500,
        direction: 'horizontal',
        lazy: {
          enabled: true,
          checkInView: true,
          loadOnTransitionStart: true,
          loadPrevNext: true,
          loadPrevNextAmount: 1
        },

      loop: true,
    
      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        // dynamicBullets: true,
      },
    
      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    
      // And if we need scrollbar
      scrollbar: {
        el: '.swiper-scrollbar',
      },
    });
})
</script>
   
